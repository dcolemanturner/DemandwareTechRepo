<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<link href="${URLUtils.staticURL('/css/test.css')}" type="text/css" rel="stylesheet"/>
		<script src="${URLUtils.staticURL('/js/jquery-1.5.1.min.js')}" type="text/javascript"></script>
	</head>
	<body>
		<br/>
		<div align="center">
			<table border="1" cellspacing="3" cellpadding="3" width="800px">
				<tr>
					<th>Test Name</th>
					<th>Description</th>
				</tr>
				<isscript>
					//Add more elements to the tests array to have them displayed on the main test runner screen 
					var tests = [ 
						{"name": "CipherHelperTestSuite", "desc": "Tests of the CipherHelper function, encrypting and decrypting string data."},
						{"name": "NewsLetterTestSuite", "desc": "Tests of the NewsLetter pipeline, subscribing and un-subscribing consumers."}
					 ];
				</isscript>
				<isloop alias="test" iterator="${tests}">
					<tr>
						<td>
							<a href='${URLUtils.http("Tester-DisplaySuite", "suite", test.name)}'>${test.name}</a>
						</td>
						<td>
							<isprint value="${test.desc}" encoding="off">
						</td>
					</tr>
				</isloop>
			</table>
		</div>
	</body>
</html>